<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <SurfaceView android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">
    </SurfaceView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorWhite">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/instruction_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/instruction"/>

            <com.be_healthy_license_2014141300.be_healthy.view.CustomSizeTextView
                android:id="@+id/instruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center"
                android:text="@string/instruction"/>

            <fragment
                android:id="@+id/history_fragment"
                android:layout_width="match_parent"
                android:layout_weight="20"
                android:layout_height="140dp"
                android:name="com.be_healthy_license_2014141300.be_healthy.fragment.HistoryFragment"/>
        </LinearLayout>

        <com.be_healthy_license_2014141300.be_healthy.view.CustomSizeTextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:gravity="left"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="@color/colorBlack"
            android:text="@string/start"
            app:backgroundTint="@color/colorAccent"/>

        <com.be_healthy_license_2014141300.be_healthy.view.HeartView
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:id="@+id/heart_view"
            android:background="@color/colorGray"/>

    </LinearLayout>

</RelativeLayout>
