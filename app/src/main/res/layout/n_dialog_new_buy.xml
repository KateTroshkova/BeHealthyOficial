<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_corners_colored">

    <TextView
        android:id="@+id/textView16"
        style="@style/n_standart_text"
        android:gravity="center"
        android:text="Мы рады, что вы с нами! Предлагаем бесплатный период 7 дней, чтобы вы лучше познакомились с нашим сервисом." />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:layout_gravity="center"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="@color/colorPrimary"
        fancy:fb_focusColor="@color/colorPrimaryDark"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="30dp"
        fancy:fb_text="7 дней бесплатно"
        android:layout_margin="@dimen/normal"
        fancy:fb_textColor="@color/colorWhite" />
</LinearLayout>