<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <com.be_healthy_license_2014141300.be_healthy.view.CustomSizeTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alarm"
        android:gravity="center"
        android:id="@+id/alarmclock"
        android:textColor="@color/colorBlack"
        android:textSize="30sp"/>

    <com.be_healthy_license_2014141300.be_healthy.view.CustomSizeTextView
        android:id="@+id/time_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alarmclock"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="42sp"/>

    <com.be_healthy_license_2014141300.be_healthy.view.CustomSizeTextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/time_text"
        android:gravity="center" />

    <ImageView
        android:id="@+id/sleep_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        app:srcCompat="@mipmap/sleep" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/arrow1"
        android:layout_toLeftOf="@+id/alarm_image"
        android:layout_centerVertical="true"
        android:src="@mipmap/arrow"/>

    <ImageView
        android:id="@+id/alarm_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@mipmap/big_alarm" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:rotation="180"
        android:layout_toEndOf="@+id/alarm_image"
        android:layout_centerVertical="true"
        android:src="@mipmap/arrow"/>

    <ImageView
        android:id="@+id/cancel_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:srcCompat="@mipmap/off" />

    <com.be_healthy_license_2014141300.be_healthy.view.CustomSizeTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sleep"
        android:layout_weight="1"
        android:gravity="left"
        android:layout_below="@+id/sleep_image"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:textColor="@color/colorBlack"/>

    <com.be_healthy_license_2014141300.be_healthy.view.CustomSizeTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/switch_off"
        android:gravity="right"
        android:layout_below="@+id/cancel_image"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_weight="1"
        android:textColor="@color/colorBlack"/>

</RelativeLayout>

