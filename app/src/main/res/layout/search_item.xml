<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.be_healthy_license_2014141300.be_healthy.view.CustomSizeEditText
        android:id="@+id/symptom_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="@string/symptom_hint"
        android:inputType="textPersonName" />

    <ListView
        android:id="@+id/all_symptoms_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/slide_margin_right"
        android:layout_marginRight="@dimen/slide_margin_right"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_gravity="center"/>

</LinearLayout>