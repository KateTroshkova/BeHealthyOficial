<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="@dimen/middle">
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/update_image1"
            android:layout_marginRight="@dimen/small"
            app:srcCompat="@mipmap/obnovitsovet_menu" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/advice_text1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="@dimen/middle">
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/update_image2"
            android:layout_marginRight="@dimen/small"
            app:srcCompat="@mipmap/obnovitsovet_menu" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/advice_text2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="@dimen/middle">
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/update_image3"
            android:layout_marginRight="@dimen/small"
            app:srcCompat="@mipmap/obnovitsovet_menu" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/advice_text3"/>
    </LinearLayout>

</LinearLayout>