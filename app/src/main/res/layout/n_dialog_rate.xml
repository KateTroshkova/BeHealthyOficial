<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/small">

    <TextView
        android:id="@+id/textView20"
        style="@style/n_standart_text"
        android:gravity="center"
        android:text="Если вам понравилось это приложение, пожалуйста, найдите время, чтобы оценить его. Это не займет больше минуты. Спасибо за поддержку!"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal">
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:layout_gravity="center"
            fancy:fb_borderWidth="2dp"
            fancy:fb_defaultColor="@color/colorWhite"
            fancy:fb_focusColor="@color/colorPrimaryDark"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="30dp"
            fancy:fb_text="Оценить"
            fancy:fb_textSize="12sp"
            android:layout_weight="1"
            fancy:fb_textColor="@color/colorBlack"
            fancy:fb_borderColor="@color/colorPrimary"/>
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/later"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:layout_gravity="center"
            fancy:fb_borderWidth="2dp"
            fancy:fb_defaultColor="@color/colorWhite"
            fancy:fb_focusColor="@color/colorPrimaryDark"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="30dp"
            fancy:fb_text="Позже"
            fancy:fb_textSize="12sp"
            android:layout_weight="1"
            fancy:fb_textColor="@color/colorBlack"
            fancy:fb_borderColor="@color/colorPrimary"/>
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/never"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:layout_gravity="center"
            fancy:fb_borderWidth="2dp"
            fancy:fb_defaultColor="@color/colorWhite"
            fancy:fb_focusColor="@color/colorPrimaryDark"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="30dp"
            fancy:fb_textSize="12sp"
            android:layout_weight="1"
            fancy:fb_text="Никогда"
            fancy:fb_textColor="@color/colorBlack"
            fancy:fb_borderColor="@color/colorPrimary"/>
    </LinearLayout>


</LinearLayout>